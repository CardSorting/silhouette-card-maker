# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (SQLite - Simple and Perfect for Development)
DATABASE_URL=sqlite:///app.db
# The database file will be created automatically in the project root
# For production with PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname
# For production with MySQL: DATABASE_URL=mysql://user:password@localhost/dbname

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Authentication Configuration
REQUIRE_AUTH=false  # Set to true to enable authentication
BCRYPT_LOG_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# File Upload Configuration
MAX_CONTENT_LENGTH=67108864  # 64MB in bytes
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting (Optional - uses memory if not set)
# REDIS_URL=redis://localhost:6379/0

# Production Settings (uncomment for production)
# FLASK_ENV=production
# DATABASE_URL=postgresql://user:password@localhost/production_db
# JWT_SECRET_KEY=your-production-jwt-secret-key
# REQUIRE_AUTH=true
# CORS_ORIGINS=https://your-frontend-domain.com
# SECRET_KEY=your-production-secret-key
